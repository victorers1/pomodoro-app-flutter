#!/bin/bash
bold="$(tput bold)"
red="$(tput setaf 1)"
green="$(tput setaf 2)"
yellow="$(tput setaf 3)"
reset="$(tput sgr0)"

printf "${yellow}ðŸ”Ž Analisando o cÃ³digo.${reset}\n\n"

if ! fvm flutter analyze; then
    printf "\n${bold}${red}âœ‹ Eita! Verifique os problemas apontados pelo flutter analyze.${reset}\n\n"
    exit 1
fi

printf "\n${yellow}ðŸ—‚ Formatando cÃ³digo.${reset}\n\n"

fvm flutter format . --set-exit-if-changed

if [ $? -eq 1 ]; then
    printf "\n${bold}${red}âœ‹ Verifique os arquivos formatados e os adicione ao commit.${reset}\n\n"
    exit 1
fi

printf "\n${bold}${green}ðŸš€ Arquivos formatados corretamente!\n\n${reset}"
